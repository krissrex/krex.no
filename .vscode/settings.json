{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    // This plugin is broken and destroys our css on save.
    "source.fixAll.stylelint": false
  },
  "cSpell.ignorePaths": [
    "**/package-lock.json",
    "**/yarn.lock",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/objects/**",
    ".vscode",
    "_site"
  ],
  "search.exclude": {
    "**/*.code-search": true,
    "**/bower_components": true,
    "_site/": true,
    "**/node_modules": true
  },
  "cSpell.words": [
    "Kristian",
    "Kristian's",
    "Rekstad"
  ]
}